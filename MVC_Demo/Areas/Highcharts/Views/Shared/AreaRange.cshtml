@*You need to add a reference to jQuery prior to referencing the highcharts javascript file*@

<script src="http://code.highcharts.com/highcharts.js"></script>

@*The highchart-more.js file contains definitions for additional chart types not available 
in the main highcharts.js file such as "arearange". You need to include this file if you
are using these types of charts*@

<script src="http://code.highcharts.com/highcharts-more.js"></script>

@using Highsoft.Web.Mvc.Charts

    <script type="text/javascript">
       
        function loadData() {
            $.getJSON('http://www.highcharts.com/samples/data/jsonp.php?filename=range.json&callback=?', function (data) {
                var chart = Highcharts.charts[0];
                chart.series[0].setData(data);

                chart.redraw();
            });
        }
  
    </script>

    @(Html.Highsoft().Highcharts(
        new Highcharts
        {
            Chart = new Chart
            {
                Width = 800,
                Height = 400,
                ZoomType = ChartZoomType.X,
                Events = new ChartEvents
                {
                    Load = "loadData"
                }
            },
            Title = new Title
            {
                Text = "Temperature variation by day"
            },
            Legend = new Legend
            {
                Enabled = false
            },
            XAxis = new List<XAxis>
            {            
                new XAxis
                {
                    Type = XAxisType.Datetime
                }
            },
            YAxis = new List<YAxis>
            {            
                new YAxis
                {
                    Title = new YAxisTitle
                    {
                        Text = null
                    }                   
                }
            },
            Tooltip = new Tooltip
            {
                Shared = true,
                Crosshairs = new List<Crosshair>
                {
                    new Crosshair
                    {
                        XAxis = true,
                        YAxis = true
                    }
                }
            },
            Series = new List<Series>
            {                    
                new ArearangeSeries
                {
                    Name = "Temperatures"
                }
            }
        }
        , "chart")
    )