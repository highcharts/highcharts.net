@using Highsoft.Web.Mvc

<script type="text/javascript">

    function formatYAxisLabels() {
        return this.value + '°';
    }

</script>

@(Html.Highsoft().Highcharts(
    new Highcharts
    {
        Chart = new Chart
        {
            Width = 1017,
            Height = 500,
            Type = ChartType.Spline
        },
        Title = new Title
        {
            Text = "Monthly Average Temperature"
        },
        XAxis = new XAxis
        {
            Categories = new List<string> { "Jan", "Feb", "Mar", "Apr", "May", "Jun",
                        "Jul", "Aug", "Sep", "Oct", "Nov", "Dec" },

        },
        YAxis = new YAxis
        {
            Title = new YAxisTitle
            {
                Text = "Temperature (°C)"
            },
            Labels = new YAxisLabels
            {
                Formatter = "formatYAxisLabels"
            }
        },
        Tooltip = new Tooltip
        {
            Crosshairs = new List<Crosshair>
            {
                new Crosshair
                {
                    XAxis = true,
                    YAxis = true
                }
            },
            Shared = true
        },
        PlotOptions = new PlotOptions
        {
            Spline = new PlotOptionsSpline
            {
                Marker = new PlotOptionsSplineMarker
                {
                    Radius = 4,
                    LineColor = "#666666",
                    LineWidth = 1
                }
            }
        },
        Series = new List<Series>
        {                    
            new SplineSeries
            {
                Name = "Tokyo",
                Marker = new SplineSeriesMarker
                {
                    Symbol = 
                },                
                Data = @ViewData["tokyoData"] as List<SplineSeriesData>
            },                   
            new SplineSeries
            {
                Name = "London",
                Data = @ViewData["londonData"] as List<SplineSeriesData>
            }
        }
    }
    , "DemoChart")
)