<script src="https://code.highcharts.com/highcharts.js"></script>
<script src="https://code.highcharts.com/modules/boost.js"></script>
<script src="https://code.highcharts.com/modules/exporting.js"></script>

@using Highsoft.Web.Mvc.Charts

@Html.Highsoft().GetHighcharts(new Highcharts
{
    Chart = new Chart
    {
        ZoomType = ChartZoomType.Xy
    },
    Boost = new Boost
    {
        UseGPUTranslations = true
    },
    XAxis = new List<XAxis>
    {
        new XAxis
        {
            Min = 0,
            Max = 100,
            GridLineWidth = 1
        }
    },
    YAxis = new List<YAxis>
    {
        new YAxis
        {
            Min = 0,
            Max = 100,
            MinPadding = 0,
            MaxPadding = 0,
            Title = new YAxisTitle
            {
                Text = null
            }
        }
    },
    Title = new Title
    {
        Text = "Scatter chart with 1 million points"
    },
    Legend = new Legend
    {
        Enabled = false
    },
    Series = new List<Series>
    {
        new ScatterSeries
        {
            Color = "rgba(152,0,67,0.1)",
            Marker = new ScatterSeriesMarker
            {
                Radius = 0.2
            },
            Data = ViewData["Data"] as List<ScatterSeriesData>,
            TurboThreshold = 1000000
        }
    }
}, "chart")
