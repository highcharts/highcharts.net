@using Highsoft.Web.Mvc.Stocks

@*  The Highstock client-side javascript library is dependent on jQuery so you need to include 
    a reference to the jQuery library before referncing the highstock llibrary*@

    <script src="http://code.highcharts.com/stock/highstock.js"></script>
    <script src="https://code.highcharts.com/modules/exporting.js"></script>
    
    @(Html.Highsoft().Highstock(
        new Highstock
        {
            Title = new Title
            {
                Text = "AAPL stock price by minute"
            },
            Subtitle = new Subtitle
            {
                Text = "Using ordinal X axis"
            },
            XAxis = new List<XAxis>
            {
                new XAxis()
                {
                    Ordinal = true
                }
            },
            YAxis = new List<YAxis>
            {
                new YAxis()
                {
                    Min = 360
                }
            },
            RangeSelector = new RangeSelector()
            {
                Buttons = new List<RangeSelectorButton>() {new RangeSelectorButton { Type= RangeSelectorButtonsType.Minute, Count= 60, Text= "1h"}, new RangeSelectorButton { Type= RangeSelectorButtonsType.Day, Count= 1, Text= "1d"}, new RangeSelectorButton { Type= RangeSelectorButtonsType.All, Count= 1, Text= "All"}},
                InputEnabled = false,
                Selected = 1
            },
            Series = new List<Series>
            {
                new AreaSeries
                {
                    Data = ViewBag.IntradayData as List<AreaSeriesData>,
                    Name = "AAPL",
                    GapSize = 5,
                    Tooltip = new AreaSeriesTooltip
                    {
                        ValueDecimals = 2
                    },
                    TurboThreshold = 10000,
                    FillColor = @ViewBag.fillColor
                }
            }

        },
        "chart"
    ))