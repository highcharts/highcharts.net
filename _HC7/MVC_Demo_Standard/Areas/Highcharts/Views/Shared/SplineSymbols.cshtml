<script src="https://code.highcharts.com/highcharts.js"></script>
<script src="https://code.highcharts.com/modules/exporting.js"></script>

@using Highsoft.Web.Mvc.Charts
@using Highsoft.Web.Mvc.Charts.Rendering

<script type="text/javascript">

    function formatYAxisLabels() {
        return this.value + '°';
    }

</script>

@{ var chartOptions =
      new Highcharts
      {
          Title = new Title
          {
              Text = "Monthly Average Temperature"
          },
          XAxis = new List<XAxis>
          {
            new XAxis
            {
                Categories = new List<string> { "Jan", "Feb", "Mar", "Apr", "May", "Jun",
                            "Jul", "Aug", "Sep", "Oct", "Nov", "Dec" },
                Crosshair = new XAxisCrosshair
                {
                    Width = 1
                }
            }
                          },
          YAxis = new List<YAxis>
          {
            new YAxis
            {
                Title = new YAxisTitle
                {
                    Text = "Temperature (°C)"
                },
                Labels = new YAxisLabels
                {
                    Formatter = "formatYAxisLabels"
                },
                Crosshair = new YAxisCrosshair
                {
                    Width = 1
                }
            }
                          },
          Tooltip = new Tooltip
          {
              Shared = true
          },
          PlotOptions = new PlotOptions
          {
              Spline = new PlotOptionsSpline
              {
                  Marker = new PlotOptionsSplineMarker
                  {
                      Radius = 4,
                      LineColor = "#666666",
                      LineWidth = 1
                  }
              }
          },
          Series = new List<Series>
          {
            new SplineSeries
            {
                Name = "Tokyo",
                Data = @ViewData["tokyoData"] as List<SplineSeriesData>
            },
            new SplineSeries
            {
                Name = "London",
                Data = @ViewData["londonData"] as List<SplineSeriesData>
            }
                          }
      };

    chartOptions.ID = "chart";
    var renderer = new HighchartsRenderer(chartOptions);
}

@Html.Raw(renderer.RenderHtml())